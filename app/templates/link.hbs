<div class="col-sm-12 col-md-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            {{profile-img owner=owner}}
        </div>
        <div class="panel-body">
            <div class="media">
                <img class="media-object pull-left" {{bind-attr src=img_url}} style="width: 124px;">
                <div class="media-body">
                    <a {{bind-attr href=url}} target="_blank">
                        <h4 class="media-body">{{title}}</h4>
                    </a>
                    <span class="link-description">{{description}}</span>
                </div>
            </div>
            <button class="btn btn-default btn-sm pull-right" data-toggle="collapse" {{action 'toggleComments'}}>comments</button>
        </div>
        {{#if viewingComments}}
            <div class="panel-footer">
                {{render 'comments' comments}}
            </div>
        {{/if}}
    </div>
</div>